extends layout 

block content
    if errors
        for error in errors
            p#missing_entry #{error.msg}
            
    h1#edit-movie-heading Add Movie
    form#edit-movie-form(method="POST")
        .form-group 
            label(for="name") Name:
            input#title-input.form-control(name="name", type="text")

        .form-group 
            label(for="description") Description:
            input#description-input.form-control(name="description", type="text")
    
        .form-group 
            label(for="year") Year:
            input#year-input.form-control(name="year", type="number")

        .form-group 
            label(for="rating") Rating:
            input#rating-input.form-control(name="rating", type="text")

        .form-group 
            label(for="genres") Genres:
            div.genres-container
                each genre in genres
                    label
                        input.form-check-input(name="genres", type="checkbox", value=genre)
                        span= genre
                
        
        input.btn.btn-primary(type="submit", value="Submit")